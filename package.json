{
  "name": "apple-page-clone",
  "version": "1.0.0",
  "description": "A CSS3 project in partial requirements of the Microverse cirriculum.",
  "main": "index.js",
  "scripts": {
    "start": "run-script-os",
    "start:win32": "browser-sync start --server --files '**/*.css, **/*.html, **/*.js, !node_modules/**/*' --directory --port 7777 --browser \"C:\\Program Files\\Firefox Developer Edition\\firefox.exe\"",
    "//": "Hello! If you are having trouble running this command. Try changing Firefox Developer Edition to FirefoxDeveloperEdition",
    "start:darwin:linux": "browser-sync start --server --files '**/*.css, **/*.html, **/*.js, !node_modules/**/*' --directory --port 3000 --browser 'Firefox'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "run-script-os": "^1.0.3",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0"
  }
}
